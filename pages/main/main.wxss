.header {
  box-shadow: 0px 1px 3px 1px #eaeaea;
  z-index: 1;
  background-color: #fff;
  position: fixed;
  top: 0;
  left: 0;
  right: 0;
  padding: 8px;
}
.add-container {
  display: flex;
  flex-direction: row;
  justify-content: space-between;
  align-items: center;
  border-radius: 4px;
  padding: 0 12px;
}
.add-image {
  width: 20px;
  height: 20px;
  margin: 12px 16px 12px 0;
}
.add-input {
  flex: 1;
}

.lists-container {
  margin-top: 64px;
  flex: 1;
  padding: 0 18px;
  box-sizing: border-box;
}
.item-container {
  display: flex;
  align-items: center;
  padding: 14px 0;
  border-bottom: 1rpx solid #eaeaea;
}
.icon-container {
  width: 22px;
  height: 22px;
  padding-right: 16px;
}
.icon {
  width: 100%;
  height: 100%;
  border-radius: 50%;
  box-sizing: border-box;
  transition: all 0.3s;
}
.undone {
  border: 2px solid #888;
}
.success {
  color: #fff;
}
.text-container {
  flex: 1;
  overflow: hidden;
  text-overflow: ellipsis;
}
.edit-navigator {
  display: inline;
}