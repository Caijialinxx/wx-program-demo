.sublist {
  background-color: #fafafa;
  height: initial;
  min-height: 100vh;
}
.header {
  background-color: #fff;
  padding: 20px;
  width: 100%;
  display: flex;
  align-items: center;
  box-sizing: border-box;
}
.header-icon {
  margin-right: 12px;
}
.header-title {
  font-weight: bold;
  font-size: 20px;
}

.list-container {
  display: flex;
  flex-direction: column;
  width: 100%;
  margin-top: 12px;
  padding: 0 18px;
  box-sizing: border-box;
  background-color: #fff;
}
.item-wrapper {
  display: flex;
  align-items: center;
  padding: 14px 0;
  border-bottom: 1rpx solid #eaeaea;
}
.item-wrapper:last-child {
  border-bottom: none;
}
.icon-container {
  width: 22px;
  height: 22px;
  padding-right: 16px;
}
.icon {
  width: 100%;
  height: 100%;
  border-radius: 50%;
  box-sizing: border-box;
  transition: all 0.3s;
}
.undone {
  border: 2px solid #888;
}
.success {
  color: #fff;
}
.text-container {
  flex: 1;
  overflow: hidden;
  text-overflow: ellipsis;
}
.edit-navigator {
  display: inline;
}

.options-container {
  width: 100%;
  display: flex;
  flex-direction: column;
  box-sizing: border-box;
  margin-top: 12px;
  text-align: center;
}
.btn {
  padding: 12px 0;
  background-color: #fff;
  margin-bottom: 12px;
}
.deleteAll {
  color: red;
}

.null-container {
  flex: 1;
  display: flex;
  align-items: center;
  font-size: 20px;
  font-weight: bold;
  color: #888;
}