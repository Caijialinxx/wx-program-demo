.cropper {
  background-color: rgba(0, 0, 0, 0.9);
  display: flex;
  flex-direction: column;
  position: relative;
}

.cropper-canvas {
  width: 100%;
  height: calc(100% - 50px);
}

.cropper-buttons {
  z-index: 999;
  position: absolute;
  bottom: 0;
  display: flex;
  width: 100%;
  justify-content: space-around;
  align-items: center;
  height: 50px;
  background-color: rgba(0, 0, 0, 0.9);
  border-top: 1rpx solid #444;
  color: #04b00f;
}

.cropper-buttons .upload, .cropper-buttons .getCropperImage {
  text-align: center;
  padding: 8px;
}