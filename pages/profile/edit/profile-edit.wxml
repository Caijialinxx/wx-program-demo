<view class='edit container'>
  <view class='userInfo-container'>
    <image bindtap='changeAvatar' class='user-avatar' src='{{userInfo.avatarUrl}}'></image>
    <text>点击换头像</text>
  </view>
  <view class='wrapper'>
    <view class='sub-wrapper'>
      <text>昵称</text>
      <block wx:if='{{userInfo.username}}'>
        <input bindinput='changeData' bindblur='changeName' value='{{userInfo.username}}' class='input'></input>
      </block>
      <block wx:else>
        <text>勾勾用户</text>
      </block>
    </view>
    <view class='sub-wrapper'>
      <text>邮箱</text>
      <block wx:if='{{userInfo.emailVerified}}'>
        <text>{{userInfo.email}}</text>
      </block>
      <block wx:else>
        <text>去关联</text>
      </block>
    </view>
    <view class='sub-wrapper'>
      <text>微信</text>
      <block wx:if='{{userInfo.weAppLinked}}'>
        <text>{{userInfo.weAppName}}</text>
      </block>
      <block wx:else>
        <button bindgetuserinfo='linkWeChat' open-type='getUserInfo' plain='true'>去关联</button>
      </block>
    </view>
    <view class='sub-wrapper'>
      <text>手机号</text>
      <block wx:if='{{userInfo.mobilePhoneVerified}}'>
        <text>{{userInfo.mobilePhoneNumber}}</text>
      </block>
      <block wx:else>
        <text>去关联</text>
      </block>
    </view>
  </view>
</view>